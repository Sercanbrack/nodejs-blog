<div class="row">
    <div class="u-full-width"  id="fullPost">
        <h2 style="text-decoration:underline">{{title}}</h2>
        <p id="postContent">{{content}}</p>
        <p>-posted {{format_date date_created}} by {{user.username}}</p>
    </div>
    {{#if comments.length}}
    <div class="u-full-width">
        <h3>Comments</h3>
        {{#each comments as |comment|}}
        <div class="three columns">
            <p>{{comment.user.username}}</p>
            <p>{{comment.date_created}}</p>
        </div>
        <div class="nine columns">
            <p>
                {{comment.content}}
            </p>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>